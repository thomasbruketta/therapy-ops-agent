# -----------------------------
# SimplePractice (web automation)
# -----------------------------
SIMPLEPRACTICE_BASE_URL=https://secure.simplepractice.com
SIMPLEPRACTICE_ORG_SLUG=your_practice_slug
SIMPLEPRACTICE_USERNAME=simplepractice_service_account@example.com
SIMPLEPRACTICE_PASSWORD=replace_me

# MFA mode expected by the automation runner: otp|totp|email_link|none
SIMPLEPRACTICE_MFA_MODE=totp

# Path where browser auth/session state is persisted
SIMPLEPRACTICE_SESSION_STATE_PATH=browser/simplepractice_session.json

# Optional: TOTP seed reference (ideally fetched via secret manager)
SIMPLEPRACTICE_TOTP_SECRET_REF=secret://therapy-ops/simplepractice/totp

# -----------------------------
# Acorn API
# -----------------------------
ACORN_BASE_URL=https://api.acorn.example
ACORN_API_KEY=acorn_api_key_here
ACORN_TIMEOUT_SECONDS=30

# -----------------------------
# Runtime / Scheduling
# -----------------------------
ACORN_TIMEZONE=UTC

# Root path for generated run artifacts
ACORN_ARTIFACT_ROOT=artifacts/runs

# Optional templates if runner supports dynamic paths
# Supported placeholders typically include: {date}, {timestamp}, {mode}
ACORN_SUMMARY_PATH_TEMPLATE=artifacts/runs/summary_{date}_{mode}.json
ACORN_TRIAGE_PATH_TEMPLATE=artifacts/runs/triage_{date}_{mode}.md

# Durable idempotency state store path
ACORN_IDEMPOTENCY_STORE_PATH=state/acorn_idempotency_store.json
