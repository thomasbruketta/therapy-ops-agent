# -----------------------------
# SimplePractice (web automation)
# -----------------------------
SIMPLEPRACTICE_BASE_URL=https://account.simplepractice.com
SIMPLEPRACTICE_ORG_SLUG=
SIMPLEPRACTICE_USERNAME=simplepractice_service_account@example.com
SIMPLEPRACTICE_PASSWORD=replace_me

# MFA mode expected by the automation runner: otp|totp|email_link|none
SIMPLEPRACTICE_MFA_MODE=totp

# Path where browser auth/session state is persisted
SIMPLEPRACTICE_SESSION_STATE_PATH=/tmp/therapy-ops-agent/browser/simplepractice_session.json
SIMPLEPRACTICE_CLINICIAN_ID=replace_me
SIMPLEPRACTICE_HEADLESS=true

# Optional: TOTP seed reference (ideally fetched via secret manager)
SIMPLEPRACTICE_TOTP_SECRET_REF=secret://therapy-ops/simplepractice/totp

# -----------------------------
# Acorn browser automation
# -----------------------------
ACORN_LOGIN_URL=https://www.cci-acorn.org/login.asp
ACORN_MOBILE_FORM_URL=https://www.cci-acorn.org/mobileforminit.asp
ACORN_USERNAME=acorn_username_here
ACORN_PASSWORD=replace_me
ACORN_CLINICIAN_ID=replace_me
ACORN_TEXT_FROM=ACORN
ACORN_HEADLESS=true
ACORN_ALLOW_INSECURE_URLS=false

# Path containing recipients JSON array
ACORN_RECIPIENTS_PATH=/tmp/therapy-ops-agent/state/acorn_recipients.json
# Source for recipients: simplepractice|recipients
ACORN_RECIPIENT_SOURCE=simplepractice

# Scheduler mode: dry-run|confirm-send
ACORN_SCHEDULER_MODE=dry-run
# Explicit live-send kill switch. Must be true for confirm-send.
ACORN_ENABLE_CONFIRM_SEND=false
# Workdays as comma-separated short names: mon,tue,wed,thu,fri,sat,sun
ACORN_WORK_DAYS=tue,wed,thu,fri

# -----------------------------
# Runtime / Scheduling
# -----------------------------
ACORN_TIMEZONE=UTC

# Root path for generated run artifacts
ACORN_ARTIFACT_ROOT=/tmp/therapy-ops-agent/artifacts/runs

# Optional templates if runner supports dynamic paths
# Supported placeholders typically include: {date}, {timestamp}, {mode}
ACORN_SUMMARY_PATH_TEMPLATE=/tmp/therapy-ops-agent/artifacts/runs/summary_{date}_{mode}.json
ACORN_TRIAGE_PATH_TEMPLATE=/tmp/therapy-ops-agent/artifacts/runs/triage_{date}_{mode}.md

# Durable idempotency state store path
ACORN_IDEMPOTENCY_STORE_PATH=/tmp/therapy-ops-agent/state/acorn_idempotency_store.json
ACORN_PRIVACY_SALT=replace_with_random_secret
